<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0B0A">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"

        app:srcCompat="@drawable/myschedule_title" />

    <ImageView
        android:id="@+id/txtdate"
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:textColor="@android:color/white"
        app:srcCompat="@drawable/containter_1" />

    <ImageView
        android:id="@+id/txtappt"
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtdate"
        android:layout_marginBottom="158dp"
        android:textColor="@android:color/white"
        app:srcCompat="@drawable/container_2" />

    <ImageView
        android:id="@+id/txtintake"
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtdate"
        android:layout_marginBottom="13dp"
        android:textColor="@android:color/white"
        app:srcCompat="@drawable/container_3" />

    <TextView
        android:id="@+id/appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/date"
        android:layout_marginBottom="168dp"
        android:textColor="@android:color/white"
        android:text="You have no upcoming appointments"
        tools:textSize="30sp" />

    <TextView
        android:id="@+id/medicine_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/appointment_date"
        android:layout_marginBottom="58dp"
        android:textColor="@android:color/white"
        android:text="Medicine"
        tools:textSize="30sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:text="Date today"
        android:textColor="@android:color/white"
        tools:textSize="30sp" />

    <ImageButton
        android:id="@+id/bttn_addnote"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/addnotes" />

</RelativeLayout>